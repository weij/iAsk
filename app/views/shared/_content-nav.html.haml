-all, unanswered = "", ""
-if session[:unanswered] || params[:unanswered] == '1' 
  -unanswered = "selected"
-else
  -all = "selected"
%nav.content-nav
  -if params[:controller]=="questions" && params[:action]=="new"
    %ul.content-tabs
      %li.questions
        = link_to t('layouts.application.all'), url_for(questions_link.merge(:unanswered => 0))
      %li.tips
        Please ask your question here
  -else
    %ul.content-tabs
      %li.questions{class: all}<
        = link_to t('layouts.application.all'), url_for(questions_link.merge(:unanswered => 0))
      %li.unanswered{class: unanswered}><
        = link_to t('layouts.application.unanswered'), url_for(questions_link.merge(:unanswered => 1))
    = render "shared/quick_question_box"
    .ask-question  
      = link_to "ASK QUESTION", new_question_path, class: 'ask-button'
  .clear{style: "clear:both; width: 100%;"}