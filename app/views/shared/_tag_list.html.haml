%div.list_cloud
  %ul
    -tags.each do |tag|
      -unless current_tags.include? tag["name"]
        -url = tag_url(:id => (current_tags + [tag["name"]]).join("+"))
        %li{ :class => tag_class }
          %table
            %tr
              %td
                %a{ :href => url, :rel => "tag",:title => "Show questions tagged '#{tag['name']}'"}
                  = tag["name"]
              %td
                %span.count 
                  x
                  = tag.count.to_i