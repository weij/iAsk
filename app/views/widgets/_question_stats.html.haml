.module.clearfix.widget.block{:class => 'widget-question_stats'}
  = render "widgets/header", :widget => widget
  %aside
    -if @question
      .question_stats
        %p
          Asked: 
          %strong
            %abbr
              = @question.created_at.strftime("%b %d '%y") 
        %p
          Seen: 
          %strong
            = @question.views_count.to_s+"  times"
        %p
          Last updated: 
          %strong
            -if @question.last_target_user
              = widget_string_format(t("time.ago", time: time_ago_in_words(@question.last_target_date)))
            -else
              = widget_string_format(t("time.ago", time: time_ago_in_words(@question.created_at)))
    