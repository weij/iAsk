- questions_link = questions_link_for(params[:action])

- content_for :nav_filters do
  = render "questions/nav_filters", :questions_link => questions_link


.questions-tags
  .questions-tags-title
    - if !self.current_tags.empty?
      = "Tagged"
    - self.current_tags.each do |tag|
      %span.tag{:class => "questions-tags-element"}
        %span.tag.tag-left
          = tag
        %span.delete-icon
          - tags = (self.current_tags - [tag])
          - if tags.empty?
            = link_to "X" , questions_url, :class => "remove_tag"
          - else
            = link_to "X" , questions_url(:tags =>  tags.map{|t| CGI.escape(t)}.join("|")), :class => "remove_tag"

%section.questions-index
  = render 'shared/posts'
 