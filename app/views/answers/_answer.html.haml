-title = answer.question.title

%article.clearfix{:class => "answer #{answer.id}"}
  %h2
    = link_to truncate(strip_tags(answer.body), :length => 200), question_path(answer.question, :anchor => "answer#{answer.id}"), :title => title
  %p
    = link_to answer.question.title, question_path(answer.question), :title => answer.question.body

  =format_number(answer.votes_average)
  =t(:votes, :scope => "activerecord.attributes.question")
