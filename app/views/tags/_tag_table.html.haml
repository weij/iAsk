%table.tag-list{:style => "width: 100%"}
  = tag_table.each_slice(4) do |tags|
    %tr
      - tags.each do |tag|
        %td{:style => "line-height:15px;"}
          %div.tag{:class => "tag_#{tag.name}", style: "float:left"}
            = tag_link(tag)
          %div.tag-number{style: "margin-left:5px;"}
            x
            = tag.count.to_i
#additional_info
  = paginate @tags
