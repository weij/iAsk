%li
  %label
    = number_with_delimiter(@resources.total_count)
    =t(:questions, :scope => "activerecord.models")
    = "- #{I18n.t('global.sort_by')}"
%li.newest
  = link_to t("questions.index.newest"), user_path(@user, params.merge(:sort=>"newest")), :rel => "nofollow", :class => "pjax", :"data-layout" => "user"
%li.hot
  = link_to t("questions.index.oldest"), user_path(@user, params.merge(:sort=>"oldest")), :rel => "nofollow", :class => "pjax", :"data-layout" => "user"
%li.views
  = link_to t("activerecord.attributes.question.views"), user_path(@user, params.merge(:sort=>"views")), :rel => "nofollow", :class => "pjax", :"data-layout" => "user"
%li.votes
  = link_to t("questions.index.votes"), user_path(@user, params.merge(:sort=>"votes")), :rel => "nofollow", :class => "pjax", :"data-layout" => "user"
