
%li.user
  = link_to current_user.display_name, user_path(current_user)
  = avatar_img(current_user, {:size => 'small'})
  %ul.drop-menu
    %li
      =link_to t('.profile'), user_path(current_user), :class => "pjax", :"data-layout" => "user"
    %li
      =link_to t('users.edit.title'), settings_path
    %li
      =link_to t('.my_karma', :karma =>current_user.reputation_on(current_group))
    %li
      =link_to t('.connect'), social_connect_path

    %li.logout
      =link_to t("layouts.application.logout"), destroy_user_session_path
